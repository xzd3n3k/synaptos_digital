# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false
insert_final_newline = true
max_line_length = 120

[*.html]
insert_final_newline = true
max_line_length = 120

[*.scss]
insert_final_newline = true
max_line_length = 120

[*.css]
insert_final_newline = true
max_line_length = 120

[*.md]
max_line_length = off
trim_trailing_whitespace = false
